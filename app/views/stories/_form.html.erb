<%= render partial:"shared/errors", locals:{model: @story}%>


<%= form_for @story, html: { multipart: true } do |form| %>
  <div class="form-group">
    <label for="exampleInputTitle"><strong><%= form.label :title %></strong></label>
    <%= form.text_field :title, class: "form-center"%>
  </div>
  <div class="form-group">
    <label for="exampleInputAuthor"><strong><%= form.label :author %></strong></label>
    <%= form.text_field :author, class: "form-center" %>
  </div>
  <div class="form-group">
    <strong><%= form.label :level%></strong>
    <%= form.text_field :level, class: "form-center" %>
  </div>
  <div class="form-group">
    <strong><%= form.label :category%></strong>
    <%#= select_tag(:story_id, options_for_select([['Easy', 1], ['Medium Easy', 2], ['Average', 3], ['Difficult',4]])) %>
     <%= form.collection_select :category_id, Category.all, :id, :name %>
     <%#= f.select :level, [['Easy', 1], ['Medium Easy', 2], ['Average', 3], ['Difficult', 4]]%>
  </div>
  <div class="btn btn-block text-left">
    Story: <%= form.file_field :file %>
  </div>
  <div class="btn btn-block text-left">
    Picture: <%= form.file_field :picture %>
  </div>
  <div class="btn btn-lg btn-block text-left">
     <%= form.submit ("save") %>
  </div>
<% end %>
