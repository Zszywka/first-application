<%= render "nav"%>

<div class = "container row text-center">
  <div class="card">
    <div id="gallerywrapper">
      <div class="text-center" >
        <h2>
          <strong><%= @story.title.capitalize %></strong>
          <strong><%= link_to ("&#x1F44D;").html_safe, vote_up_story_path(@story), method: "post", class: "blue1"%></strong>
            <%= @story.rate %>
        </h2>
        <div class="text-center">
          <%= image_tag @story.picture.url (:medium) %>
        </div>
      </div>
      <p></p>
      <div class="text-center">
        <audio controls>
          <source src= "<%= @story.file.url %>" type= "<%= @story.file_content_type %>" >
          Your browser does not support the audio element.
        </audio>
      </div>
      <div class="text-center container">
        <% if @story.previous_story %>
          <!-- <a class="next" href="#pic2"><%= link_to raw("&#x25C0;"), story_path(@story.previous_story) %></a> | -->
            <button type="button" class="btn btn-success"><%= link_to raw("&#x25C0;"), story_path(@story.previous_story) %></button>
        <% end %>
        <button type="button" class="btn btn-success"><%= link_to "Delete", story_path(@story), method: "delete", data: {confirm:"Are you sure?"} %></button>
        <button type="button" class="btn btn-success"><%= link_to "Edit", edit_story_path(@story) %></button>
        <% if @story.next_story %>
          <!-- <a class="next" href="#pic2"><%= link_to "&#x25B6;".html_safe, story_path(@story.next_story)%></a> -->
            <button type="button" class="btn btn-success"><%= link_to "&#x25B6;".html_safe, story_path(@story.next_story)%></button>
        <% end %>
      </div>
      <div class="text-center">
        <p></p>
        <div class="blue1 text-center">Inne bajki tego Autora &#8628;</div>
        <p></p>
        <button type="button" class="btn btn-success"><%= link_to @story.author.capitalize, the_same_author_story_path(@story) %></button>
      </div>
    </div>
  </div>
  <div class="card">
    <main role="main" class="container">
      <div class="row row-offcanvas row-offcanvas-right">
        <div class="col-md-10 sidebar-offcanvas" id="sidebar">
          <div class="list-group">
            <div class="blue1 text-center">Podobne &#8628;</div>
              <p></p>
            <% @stories.each do |story| %>
              <% if story.level == @story.level %>
                <%= link_to story_path(story) do %>
                  <%= image_tag story.picture.url(:thumb), class:"blue1"%>
                  <p></p>
                  <p>
                    <button type="button" class="btn btn-info text-center"><%= story.title%></button>
                  </p>
                  <hr>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
