<h3> Wasze propozycje </h3>

<%= form_for @suggestion, html: { multipart: true } do |form| %>

  <div class="form-group">
    <label for="exampleInputTitle"><strong>Propozycja:</strong></label>
    <p></p>
    <%= form.text_area :body, class: "form-center"%>
  </div>
  <div class="form-group">
    <label for="exampleInputAuthor"><strong>Autor:</strong></label>
    <p></p>
    <%= form.text_field :author, class: "form-center" %>
  </div>
  <div class="btn btn-lg btn-block text-left">
     <%= form.submit ("save") %>
  </div>
<% end %>
